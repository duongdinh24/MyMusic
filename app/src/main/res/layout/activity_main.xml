<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_disc_icon"
        android:layout_width="356dp"
        android:layout_height="356dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="27dp"
        android:src="@drawable/disk_icon"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tv_tittle_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_disc_icon"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Tittle song"
        android:textSize="10pt" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_artist"
        android:layout_below="@+id/tv_tittle_song"
        android:text="Nghệ sĩ"
        android:textSize="8pt"
        android:layout_centerHorizontal="true"
        />

    <SeekBar
        android:id="@+id/time_play"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_artist"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_artist"
        android:layout_toLeftOf="@+id/time_play"
        android:layout_marginTop="30dp"
        android:text="st"
        android:id="@+id/tv_time_start"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_artist"
        android:layout_toRightOf="@+id/time_play"
        android:layout_marginTop="30dp"
        android:text="en"
        android:id="@+id/tv_time_end"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:id="@+id/btn_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/time_play"
        android:background="@drawable/ic_play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="play_click"/>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/time_play"
        android:background="@drawable/ic_next"
        android:layout_toRightOf="@+id/btn_play"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />
    <Button
        android:id="@+id/btn_previous"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/time_play"
        android:background="@drawable/ic_previous"
        android:layout_toLeftOf="@+id/btn_play"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        />
    <Button
        android:id="@+id/btn_shuffle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/time_play"
        android:background="@drawable/ic_shuffle"
        android:layout_toLeftOf="@+id/btn_previous"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
    <Button
        android:id="@+id/btn_repeat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/time_play"
        android:background="@drawable/ic_repeat_all"
        android:layout_toRightOf="@+id/btn_next"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />
</RelativeLayout>